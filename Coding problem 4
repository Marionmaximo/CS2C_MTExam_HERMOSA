// favoriteNumber.js

// Declare the favorite number
let theFavNumber = 12; // Set the favorite number

// Variable to store user guess
let userGuess;

// Use a while loop to prompt the user until they guess correctly
while (userGuess !== theFavNumber) {
    userGuess = parseInt(prompt("Guess the favorite number:"));

    if (userGuess < theFavNumber) {
        console.log("Too low! Try again.");
    } else if (userGuess > theFavNumber) {
        console.log("Too high! Try again.");
    } else if (userGuess === theFavNumber) {
        console.log("Correct! You've guessed the favorite number.");
    } else {
        console.log("Invalid input, please enter a number.");
    }
}
